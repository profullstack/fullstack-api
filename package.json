{
  "name": "fullstack-api",
  "version": "1.0.0",
  "author": "",
  "description": "Fullstack API starter kit with Koa, rethinkdb and websockets.",
  "main": "index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^2.0.1",
    "glob": "^7.1.2",
    "jsonwebtoken": "^8.2.1",
    "kcors": "^2.2.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.3.1",
    "koa-router": "^7.4.0",
    "koa-websocket": "^4.1.0",
    "minimist": "^1.2.0",
    "mongodb": "^2.x",
    "pm2": "^2.10.3",
    "redis": "^2.8.0",
    "rethinkdb": "^2.3.3"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3"
  },
  "scripts": {
    "test": "mocha './test/**/*-spec.js'",
    "start": ". ./.env.sh && ./node_modules/.bin/nodemon index.js",
    "start:cluster": "./node_modules/.bin/nodemon cluster.js",
    "start:production": "NODE_ENV=production && . ./.env.sh && ./node_modules/.bin/pm2 start index.js -i max --watch --name='fullstack-api'",
    "restart:production": "NODE_ENV=production && . ./.env.sh && ./node_modules/.bin/pm2 restart fullstack-api --update-env",
    "lint": "./node_modules/.bin/eslint ./src/ ./test/",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "license": "MIT"
}
